<table class="table" id="tabla-listado-reclamos">
    <thead class="card-table_header">
        <tr>
            <th scope="col" class="border-radius-left" style="padding:13px;">Fecha</th>
            <th scope="col" style="padding:13px;">Detalle del Reclamo</th>
            <th scope="col" style="padding:13px;">Estado</th>
            <th scope="col" class="border-radius-right" style="padding:13px;"></th>
        </tr>
    </thead>


    <tbody>
        @foreach (var item in Model.listadoReclamos)
        {
            <tr>
                <td>@item.fechaReclamo</td>
                <td>@item.detalle</td>
                <td>

                    @if (item.estado == "Abierto")
                    {
                        <svg style="margin:5px;" width="22" height="22" viewBox="0 0 22 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <g id="book-icon">
                                <path d="M3 2C2.44772 2 2 2.44772 2 3V19C2 19.5523 2.44772 20 3 20H19C19.5523 20 20 19.5523 20 19V3C20 2.44772 19.5523 2 19 2H3Z" stroke="orange" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                <path d="M3 2V8L9 6L15 8V2" stroke="orange" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </g>
                        </svg>
                    }
                    else if (item.estado == "Cerrado")
                    {
                        <svg style="margin:5px;" width="22" height="22" viewBox="0 0 22 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <g id="book-icon">
                                <path d="M3 2C2.44772 2 2 2.44772 2 3V19C2 19.5523 2.44772 20 3 20H19C19.5523 20 20 19.5523 20 19V3C20 2.44772 19.5523 2 19 2H3Z" stroke="gray" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                <path d="M3 2V8L9 6L15 8V2" stroke="gray" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </g>
                        </svg>
                    }
                    else if (item.estado == "En Proceso")
                    {
                        <svg style="margin:5px;" width="22" height="22" viewBox="0 0 22 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <g id="book-icon">
                                <path d="M3 2C2.44772 2 2 2.44772 2 3V19C2 19.5523 2.44772 20 3 20H19C19.5523 20 20 19.5523 20 19V3C20 2.44772 19.5523 2 19 2H3Z" stroke="blue" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                <path d="M3 2V8L9 6L15 8V2" stroke="blue" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </g>
                        </svg>
                    }
                    @item.estado
                </td>


                <td>
                    <a asp-action="ReclamoEnProgreso" asp-controller="Cliente" asp-route-codigoReclamo="@item.codigoReclamo">
                        <svg style="margin:5px;" width="22" height="22" viewBox="0 0 22 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <g id="&#240;&#159;&#166;&#134; icon &#34;search&#34;">
                                <path id="Vector" d="M9.88894 18.7779C14.7982 18.7779 18.7779 14.7982 18.7779 9.88894C18.7779 4.97971 14.7982 1 9.88894 1C4.97971 1 1 4.97971 1 9.88894C1 14.7982 4.97971 18.7779 9.88894 18.7779Z" stroke="#01ADEF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                <path id="Vector_2" d="M21 21.0013L16.1666 16.168" stroke="#01ADEF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </g>
                        </svg>
                    </a>
                </td>
            </tr>
        }
    </tbody>

</table>